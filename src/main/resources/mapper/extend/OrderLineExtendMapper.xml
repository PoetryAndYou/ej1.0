<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.apps.ej.dao.extend.OrderLineExtendMapper">
    <select id="selectById" resultMap="com.briup.apps.ej.dao.AddressMapper.BaseResultMap">
         select
         l.number,
         o.order_time,
         o.total
        from
       ej_order o  join   ej_order_line l
                on  l.order_id=o.id and l.id=#{id}
    </select>
    <resultMap id="com.briup.apps.ej.dao.AddressMapper.BaseResultMap"
               type="com.briup.apps.ej.bean.extend.OrderLineExtend">
        <association property="order" column="order" javaType="com.briup.apps.ej.bean.Order">
            <result column="order_time" property="orderTime"></result>
            <result column="total" property="total"/>
        </association>

    </resultMap>

</mapper>